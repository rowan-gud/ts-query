{
  "name": "@ellefe/optimus",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "typescript",
    "result",
    "option",
    "maybe",
    "rust",
    "sum",
    "types",
    "type",
    "system",
    "functional",
    "fp"
  ],
